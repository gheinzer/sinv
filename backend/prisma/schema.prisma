// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:../sinv.db"
}

model Object {
    id               String           @id
    createdBy        User             @relation(fields: [creatorID], references: [id])
    creatorID        Int
    attachements     Attachment[]
    ObjectType       ObjectType       @relation(fields: [objectTypeId], references: [id])
    objectTypeId     Int
    Object1Relations ObjectRelation[] @relation("Object1")
    Object2Relations ObjectRelation[] @relation("Object2")
}

model ObjectRelation {
    id             Int          @id @default(autoincrement())
    RelationType   RelationType @relation(fields: [relationTypeId], references: [id])
    relationTypeId Int
    Object1        Object       @relation(fields: [object1ID], references: [id], name: "Object1")
    object1ID      String
    Object2        Object       @relation(fields: [object2ID], references: [id], name: "Object2")
    object2ID      String
}

model RelationType {
    id        Int              @id @default(autoincrement())
    name      String           @unique
    relations ObjectRelation[]
}

model ObjectType {
    id      Int      @id @default(autoincrement())
    name    String   @unique
    objects Object[]
}

model AttachementType {
    id           Int          @id @default(autoincrement())
    name         String       @unique
    attachements Attachment[]
}

model Attachment {
    id                Int             @id @default(autoincrement())
    mimeType          String
    comment           String
    AttachementType   AttachementType @relation(fields: [attachementTypeId], references: [id])
    attachementTypeId Int
    Object            Object          @relation(fields: [objectId], references: [id])
    objectId          String
}

model User {
    id             Int            @id @default(autoincrement())
    email          String
    username       String         @unique
    createdObjects Object[]
    sessions       UserSessions[]
}

model UserSessions {
    id     String   @id
    opened DateTime @default(now())
    User   User?    @relation(fields: [userId], references: [id])
    userId Int?
}
