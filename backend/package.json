{
    "name": "@sinv/backend",
    "version": "0.0.0",
    "description": "A simple inventory system (backend).",
    "main": "dist/index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "tsc",
        "postbuild": "cp package.json ../dist/backend && cp -r prisma ../dist/backend && cd ../dist/backend && npm install && prisma generate",
