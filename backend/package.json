    },
    "homepage": "https://github.com/gheinzer/sinv#readme",
    "dependencies": {
        "@prisma/client": "^4.9.0",
        "bcrypt": "^5.1.0",
        "lodash": "^4.17.21",
        "mime": "^3.0.0",
        "ws": "^8.12.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/lodash": "^4.14.191",
        "@types/mime": "^3.0.1",
        "@types/node": "^18.11.18",
