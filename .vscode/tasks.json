    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and run",
            "type": "shell",
            "command": "cd backend && npm install --include=dev && npm run build && cd ../frontend && ng build && cd .. && node dist/backend/index",
            "problemMatcher": []
        },
        {
            "label": "Migrate prisma databse",
            "type": "shell",
            "command": "cd backend && sudo prisma migrate dev --name=init && primsa generate",
            "problemMatcher": []
        }
    ]
}
